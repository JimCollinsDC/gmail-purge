{
  "name": "gmail-purge",
  "version": "1.0.0",
  "description": "Gmail inbox analysis and reporting tool - read-only",
  "main": "index.html",
  "scripts": {
    "start": "node scripts/start-server.js",
    "dev": "http-server -p 3000 -o",
    "build": "npm run lint && npm run format",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint js/**/*.js",
    "lint:fix": "eslint js/**/*.js --fix",
    "format": "prettier --write js/**/*.js css/**/*.css *.html",
    "format:check": "prettier --check js/**/*.js css/**/*.css *.html",
    "prepare": "husky"
  },
  "devDependencies": {
    "@vitest/ui": "^3.2.4",
    "eslint": "^8.50.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.0",
    "http-server": "^14.1.1",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.2",
    "prettier": "^3.0.0",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "gmail",
    "email",
    "analysis",
    "reporting",
    "javascript"
  ],
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,html,md}": [
      "prettier --write"
    ]
  },
  "author": "",
  "license": "MIT"
}
